
<br><br>
<div class="jumbotron">
    <div class="span3 well">
        <center>
        <h1>LOL</h1>
            <h3><%= @city.name + ' ' + @city.zip_code %></h3>
	    </center>
    </div>
</div>
<br><br>

<center><h2>Tous les gossips de <%= @city.name %></h2></center>
<br><br>

<div class="container">
  <div class="row-fluid marketing">
    <div class="col-xs-1 center-block">
      <div class="card-columns">

      <% @city.gossips.each do |gossip| %>

        <div class="animated wow fadeIn slow">
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><%= gossip.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= link_to gossip.user.first_name + ' ' + gossip.user.last_name, user_path(gossip.user.id) %></h6>
              <p class="card-text"><%= gossip.content[0..50].gsub(/\s\w+\s*$/, ' ...') %></p>
              <%= link_to "plus", gossip_path(gossip.id - 1), :class => "btn btn-secondary" %>   
            </div>
          </div>
        </div>

      <% end %>

      </div>
    </div>
  </div>
</div>



