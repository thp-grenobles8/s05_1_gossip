<div class="jumbotron">
  <div class="container">
    <h1 class="display-3">Connexion</h1>
  </div>
  <div class="container">
    <div class="form">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <div class="form-item">
        <%= label_tag 'Email' %>
        <%= text_field_tag 'email', nil, :placeholder => 'mon.email@domain.com' %>
      </div>
      <div class="form-item">
        <%= label_tag 'Mot de passe' %>
        <%= password_field_tag 'password' %>
      </div>
      <div class="form-item">
        <%= submit_tag "Connexion" %>
      </div>
    <% end %>
  </div>
</div>