<div class="jumbotron">
  <div class="container">

<!-- Material form messages -->
    <div class="card">

      <h5 class="card-header info-color white-text text-center py-4">
          <strong>Nouveau Message</strong>
      </h5><br><br><br>

        <!--Card content-->
        <div class="card-body px-lg-5 pt-0">

          <!-- Form -->
          <%= form_tag url_for(action: 'create'), method: 'post', class: 'text-center' do %>

          <!--Recipient-->
          <div class="md-form">
            <%= text_area_tag 'recipient', nil, class: "form-control", rows: '1'%>
          </div><br>

          <!--Message-->
          <div class="md-form">
            <%= text_area_tag 'content', nil, class: "form-control md-textarea", rows: "4" %>
          </div><br>

          <%= hidden_field_tag 'sender_id', current_user.id %>
          
          <%= submit_tag 'Envoyer', class: "btn btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" %>
        </form>
      </div>
    </div>
  </div>
<div>
<% end %>